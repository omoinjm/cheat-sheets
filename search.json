---
layout: none
---
[
  {% assign all_content = site.pages | concat: site.documents %}
  {% assign filtered_content = "" | split: "" %}
  {% for item in all_content %}
    {% if item.title and item.url != "/search.json" and item.url != "/search/" %}
      {% assign filtered_content = filtered_content | push: item %}
    {% endif %}
  {% endfor %}

  {% for item in filtered_content %}
    {
      "title"    : {{ item.title | jsonify }},
      "tags"     : {{ item.tags | join: ', ' | jsonify }},
      "url"      : {{ item.url | relative_url | jsonify }},
      "content"  : {{ item.content | strip_html | strip_newlines | truncatewords: 50 | jsonify }}
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]
